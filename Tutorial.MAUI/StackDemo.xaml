<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Tutorial.MAUI.StackDemo"
             Title="StackDemo">
    <VerticalStackLayout>
        <Frame BorderColor="DarkBlue" Padding="5" CornerRadius="5">
            <StackLayout Orientation="Vertical" Spacing="15">
                <Label Text="Label 1" VerticalOptions="Center" 
                       HorizontalOptions="End"
                       BackgroundColor="LightPink"
                       TextColor="Black"
                       FontAttributes="Bold, Italic"
                       TextDecorations="None"
                       WidthRequest="200" HeightRequest="30"/>
                <Label Text="Label2 &#10; Line 2" 
                       VerticalOptions="Center" HorizontalOptions="Center" 
                       BackgroundColor="DarkGreen" TextColor="AliceBlue"/>
                <Label Text="Label 3" VerticalOptions="End"
                       HorizontalOptions="Fill"
                       BackgroundColor="IndianRed"/>
            </StackLayout>
        </Frame>
    </VerticalStackLayout>
</ContentPage>